            // Número de WhatsApp
            const numeroWhatsApp = '593994276282';
            
            // Crear URL de WhatsApp
            const urlWhatsApp = `https://wa.me/${numeroWhatsApp}?text=${encodeURIComponent(mensaje)}`;
            
            // Abrir WhatsApp
            window.open(urlWhatsApp, '_blank');
            
            // Cerrar modal después de enviar
            setTimeout(() => {
                closeModal();
            }, 1000);
        }

        // Inicializar validación cuando se carga la página
        document.addEventListener('DOMContentLoaded', function() {
            setupFormValidation();
        });
        
        // Portfolio Carousel functionality
        let slideIndex = 0;
        const slides = document.querySelectorAll('.portfolio-item');
        const dots = document.querySelectorAll('.carousel-dot');
        const totalSlides = slides.length;
        const slidesToShow = window.innerWidth >= 1024 ? 3 : window.innerWidth >= 768 ? 2 : 1;
        const maxIndex = Math.ceil(totalSlides / slidesToShow) - 1;
        
        function showSlide(n) {
            // Handle circular navigation
            if (n > maxIndex) {
                slideIndex = 0;
            } else if (n < 0) {
                slideIndex = maxIndex;
            } else {
                slideIndex = n;
            }
            
            // Update carousel position
            const carouselInner = document.querySelector('.portfolio-carousel-inner');
            const slideWidth = 100 / slidesToShow;
            carouselInner.style.transform = `translateX(-${slideIndex * slideWidth * slidesToShow}%)`;
            
            // Update dots
            dots.forEach((dot, i) => {
                dot.classList.toggle('active', i === slideIndex);
            });
        }
        
        function moveSlide(step) {
            showSlide(slideIndex + step);
        }
        
        function currentSlide(n) {
            showSlide(n);
        }
        
        // Update slidesToShow on window resize
        window.addEventListener('resize', () => {
            const newSlidesToShow = window.innerWidth >= 1024 ? 3 : window.innerWidth >= 768 ? 2 : 1;
            if (newSlidesToShow !== slidesToShow) {
                // Recalculate maxIndex and adjust current position
                const newMaxIndex = Math.ceil(totalSlides / newSlidesToShow) - 1;
                slideIndex = Math.min(slideIndex, newMaxIndex);
                showSlide(slideIndex);
            }
        });
        
        // Auto slide every 5 seconds for portfolio
        let portfolioInterval = setInterval(() => {
            moveSlide(1);
        }, 5000);
        
        // Pause auto-slide when hovering over carousel
        const portfolioCarousel = document.querySelector('.portfolio-carousel');
        portfolioCarousel.addEventListener('mouseenter', () => {
            clearInterval(portfolioInterval);
        });
        
        portfolioCarousel.addEventListener('mouseleave', () => {
            portfolioInterval = setInterval(() => {
                moveSlide(1);
            }, 5000);
        });
        
        // Testimonial carousel functionality
        let testimonialIndex = 0;
        const testimonialCards = document.querySelectorAll('.testimonial-card');
        const testimonialDots = document.querySelectorAll('.testimonial-dot');
        
        function showTestimonial(n) {
            // Handle circular navigation
            if (n > testimonialCards.length - 1) {
                testimonialIndex = 0;
            } else if (n < 0) {
                testimonialIndex = testimonialCards.length - 1;
            } else {
                testimonialIndex = n;
            }
            
            // Update carousel position
            const testimonialInner = document.querySelector('.testimonial-inner');
            
            // Different behavior for mobile and desktop
            if (window.innerWidth < 768) {
                testimonialInner.style.transform = `translateX(-${testimonialIndex * 100}%)`;
            } else {
                // On desktop, we don't need to slide as all cards are visible
                testimonialInner.style.transform = 'translateX(0)';
            }
            
            // Update dots
            testimonialDots.forEach((dot, i) => {
                dot.classList.toggle('active', i === testimonialIndex);
            });
        }
        
        function moveTestimonial(step) {
            showTestimonial(testimonialIndex + step);
        }
        
        function currentTestimonial(n) {
            showTestimonial(n);
        }
        
        // Auto slide testimonials every 6 seconds
        let testimonialInterval = setInterval(() => {
            if (window.innerWidth < 768) {
                moveTestimonial(1);
            }
        }, 6000);
        
        // Handle window resize for testimonials
        window.addEventListener('resize', () => {
            showTestimonial(testimonialIndex);
        });
        
        // Initialize testimonials
        showTestimonial(0);
        
        // Hero slideshow functionality
        let heroSlideIndex = 0;
        const heroSlides = document.querySelectorAll('.hero-slide');
        const totalHeroSlides = heroSlides.length;
        
        function showHeroSlide() {
            // Remove active class from all slides
            heroSlides.forEach(slide => slide.classList.remove('active'));
            
            // Add active class to current slide
            heroSlides[heroSlideIndex].classList.add('active');
            
            // Move to next slide
            heroSlideIndex = (heroSlideIndex + 1) % totalHeroSlides;
        }
        
        // Initialize hero slideshow
        showHeroSlide();
        
        // Auto slide every 4 seconds for hero
        setInterval(showHeroSlide, 4000);
        
        // Mobile menu functionality
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        const mobileMenuPanel = document.getElementById('mobileMenuPanel');
        const closeMobileMenu = document.getElementById('closeMobileMenu');

        function openMobileMenu() {
            mobileMenu.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            setTimeout(() => {
                mobileMenuPanel.style.transform = 'translateX(0)';
            }, 10);
        }

        function closeMobileMenuFunc() {
            mobileMenuPanel.style.transform = 'translateX(-100%)';
            setTimeout(() => {
                mobileMenu.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }, 300);
        }

        function navigateToService(serviceType) {
            closeMobileMenuFunc();
            setTimeout(() => {
                showPackages(serviceType);
            }, 400);
        }

        // Event listeners for mobile menu
        mobileMenuBtn.addEventListener('click', openMobileMenu);
        closeMobileMenu.addEventListener('click', closeMobileMenuFunc);

        // Close menu when clicking outside
        mobileMenu.addEventListener('click', function(e) {
            if (e.target === mobileMenu) {
                closeMobileMenuFunc();
            }
        });

        // Initialize portfolio carousel
        showSlide(0);
        
        // Handle touch events for mobile swiping - Portfolio
        let touchStartX = 0;
        let touchEndX = 0;
        
        portfolioCarousel.addEventListener('touchstart', (e) => {
            touchStartX = e.changedTouches[0].screenX;
        }, false);
        
        portfolioCarousel.addEventListener('touchend', (e) => {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
        }, false);
        
        function handleSwipe() {
            if (touchEndX < touchStartX) {
                // Swipe left
                moveSlide(1);
            } else if (touchEndX > touchStartX) {
                // Swipe right
                moveSlide(-1);
            }
        }
        
        // Handle touch events for mobile swiping - Testimonials
        const testimonialCarousel = document.querySelector('.testimonial-carousel');
        let testimonialTouchStartX = 0;
        let testimonialTouchEndX = 0;
        
        testimonialCarousel.addEventListener('touchstart', (e) => {
            testimonialTouchStartX = e.changedTouches[0].screenX;
        }, false);
        
        testimonialCarousel.addEventListener('touchend', (e) => {
            testimonialTouchEndX = e.changedTouches[0].screenX;
            handleTestimonialSwipe();
        }, false);
        
        function handleTestimonialSwipe() {
            if (testimonialTouchEndX < testimonialTouchStartX) {
                // Swipe left
                moveTestimonial(1);
            } else if (testimonialTouchEndX > testimonialTouchStartX) {
                // Swipe right
                moveTestimonial(-1);
            }
        }
    </script>
