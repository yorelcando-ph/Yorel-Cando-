    <script>
        // Variables globales para el modal
        let paqueteSeleccionado = '';
        let precioSeleccionado = '';

        // Scroll to services section
        function scrollToServices() {
            document.getElementById('servicios').scrollIntoView({ behavior: 'smooth' });
        }
        
        // Show packages based on service type
        function showPackages(type) {
            // Hide all package sections
            document.getElementById('paquetes-sesiones').classList.add('hidden');
            document.getElementById('paquetes-cobertura').classList.add('hidden');
            document.getElementById('paquetes-fotovideo').classList.add('hidden');
            
            // Show the selected package section
            if (type === 'sesiones') {
                document.getElementById('paquetes-sesiones').classList.remove('hidden');
            } else if (type === 'cobertura') {
                document.getElementById('paquetes-cobertura').classList.remove('hidden');
            } else if (type === 'fotovideo') {
                document.getElementById('paquetes-fotovideo').classList.remove('hidden');
            }
            
            // Scroll to the package section
            if (type === 'sesiones') {
                document.getElementById('paquetes-sesiones').scrollIntoView({ behavior: 'smooth' });
            } else if (type === 'cobertura') {
                document.getElementById('paquetes-cobertura').scrollIntoView({ behavior: 'smooth' });
            } else if (type === 'fotovideo') {
                document.getElementById('paquetes-fotovideo').scrollIntoView({ behavior: 'smooth' });
            }
        }
        
        // Hide packages and show services
        function hidePackages() {
            document.getElementById('paquetes-sesiones').classList.add('hidden');
            document.getElementById('paquetes-cobertura').classList.add('hidden');
            document.getElementById('paquetes-fotovideo').classList.add('hidden');
            document.getElementById('servicios').scrollIntoView({ behavior: 'smooth' });
        }

        // Funciones del modal de reserva
        function abrirModal(nombrePaquete, precio) {
            paqueteSeleccionado = nombrePaquete;
            precioSeleccionado = precio;
            
            document.getElementById('nombrePaquete').textContent = nombrePaquete;
            document.getElementById('precioPaquete').textContent = precio;
            document.getElementById('reservaModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden'; // Prevenir scroll del body
            
            // Reset form
            document.getElementById('reservaForm').reset();
            clearErrors();
            updateSubmitButton();
        }

        function closeModal() {
            document.getElementById('reservaModal').classList.add('hidden');
            document.body.style.overflow = 'auto'; // Restaurar scroll del body
            
            // Reset form
            document.getElementById('reservaForm').reset();
            clearErrors();
            updateSubmitButton();
        }

        // Cerrar modal al hacer clic fuera de él
        document.getElementById('reservaModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Validación en tiempo real
        function setupFormValidation() {
            const fields = ['nombre', 'correo', 'fechaEvento', 'tipoEvento', 'ciudad'];
            
            fields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                field.addEventListener('input', validateField);
                field.addEventListener('change', validateField);
                field.addEventListener('blur', validateField);
            });
        }

        function validateField(e) {
            const field = e.target;
            const fieldId = field.id;
            const value = field.value.trim();
            const errorElement = field.nextElementSibling;
            
            let isValid = true;
            let errorMessage = '';

            // Validaciones específicas
            switch(fieldId) {
                case 'nombre':
                    if (!value) {
                        isValid = false;
                        errorMessage = 'Este campo es obligatorio';
                    }
                    break;
                case 'correo':
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!value) {
                        isValid = false;
                        errorMessage = 'Este campo es obligatorio';
                    } else if (!emailRegex.test(value)) {
                        isValid = false;
                        errorMessage = 'Ingresa un correo válido';
                    }
                    break;
                case 'fechaEvento':
                    if (!value) {
                        isValid = false;
                        errorMessage = 'Selecciona una fecha';
                    } else {
                        const selectedDate = new Date(value);
                        const today = new Date();
                        today.setHours(0, 0, 0, 0);
                        if (selectedDate < today) {
                            isValid = false;
                            errorMessage = 'La fecha debe ser futura';
                        }
                    }
                    break;
                case 'tipoEvento':
                    if (!value) {
                        isValid = false;
                        errorMessage = 'Selecciona el tipo de evento';
                    }
                    break;
                case 'ciudad':
                    if (!value) {
                        isValid = false;
                        errorMessage = 'Ingresa la ciudad del evento';
                    }
                    break;
            }

            // Mostrar/ocultar error
            if (isValid) {
                field.classList.remove('error-field');
                errorElement.classList.add('hidden');
            } else {
                field.classList.add('error-field');
                errorElement.textContent = errorMessage;
                errorElement.classList.remove('hidden');
            }

            updateSubmitButton();
            return isValid;
        }

        function clearErrors() {
            const fields = document.querySelectorAll('#reservaForm input, #reservaForm select');
            const errors = document.querySelectorAll('.error-message');
            
            fields.forEach(field => {
                field.classList.remove('error-field');
            });
            
            errors.forEach(error => {
                error.classList.add('hidden');
            });
        }

        function updateSubmitButton() {
            const fields = ['nombre', 'correo', 'fechaEvento', 'tipoEvento', 'ciudad'];
            const submitBtn = document.getElementById('consultarBtn');
            
            let allValid = true;
            
            fields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                const value = field.value.trim();
                
                if (!value) {
                    allValid = false;
                    return;
                }
                
                // Validación específica para email
                if (fieldId === 'correo') {
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!emailRegex.test(value)) {
                        allValid = false;
                        return;
                    }
                }
                
                // Validación específica para fecha
                if (fieldId === 'fechaEvento') {
                    const selectedDate = new Date(value);
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);
                    if (selectedDate < today) {
                        allValid = false;
                        return;
                    }
                }
            });
            
            if (allValid) {
                submitBtn.disabled = false;
                submitBtn.classList.remove('bg-gray-400', 'cursor-not-allowed');
                submitBtn.classList.add('btn-enabled');
            } else {
                submitBtn.disabled = true;
                submitBtn.classList.add('bg-gray-400', 'cursor-not-allowed');
                submitBtn.classList.remove('btn-enabled');
            }
        }

        function enviarWhatsApp() {
            // Validar todos los campos antes de enviar
            const fields = ['nombre', 'correo', 'fechaEvento', 'tipoEvento', 'ciudad'];
            let allValid = true;
            
            fields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                const event = { target: field };
                if (!validateField(event)) {
                    allValid = false;
                }
            });
            
            if (!allValid) {
                return;
            }
            
            // Obtener datos del formulario
            const nombre = document.getElementById('nombre').value.trim();
            const correo = document.getElementById('correo').value.trim();
            const fechaEvento = document.getElementById('fechaEvento').value;
            const tipoEvento = document.getElementById('tipoEvento').value;
            const ciudad = document.getElementById('ciudad').value.trim();
            
            // Formatear fecha
            const fecha = new Date(fechaEvento);
            const fechaFormateada = fecha.toLocaleDateString('es-ES', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            
            // Crear mensaje para WhatsApp
            const mensaje = `🎉 *NUEVA CONSULTA DE RESERVA* 🎉

📋 *DATOS DEL CLIENTE:*
👤 Nombre: ${nombre}
📧 Correo: ${correo}
